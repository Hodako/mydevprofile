{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio backend API using Cloudflare Workers and D1",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create portfolio-db",
    "d1:create-dev": "wrangler d1 create portfolio-db-dev",
    "d1:migrate": "wrangler d1 execute portfolio-db --file=./schema.sql",
    "d1:migrate-dev": "wrangler d1 execute portfolio-db-dev --file=./schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "wrangler": "^3.0.0"
  }
}
